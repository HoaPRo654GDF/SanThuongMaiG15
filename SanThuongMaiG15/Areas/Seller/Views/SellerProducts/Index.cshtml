@using SanThuongMaiG15.ModelViews;
@using PagedList.Core.Mvc;
@model PagedList.Core.IPagedList<SanThuongMaiG15.Models.Product> 

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Seller/Views/Shared/_SellerLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Seller" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách sản phẩm</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        @* <form asp-controller="SellerProducts" asp-action="Filter" method="get"> *@
                            <select  class="custom-select" id="txtCatID" name="txtCatID" style="min-width: 200px;"  >
                                <option disabled selected>Chọn Danh Mục</option>
                                <option value="0">All</option>
                                @foreach (var cat in (SelectList)ViewData["DanhMuc"])
                                 {
                                <option asp-route-id="@cat.Value" name="@cat.Value">@cat.Text</option>
                                 }

                            </select>
                        @* </form> *@
                      
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a class="btn btn-primary" asp-controller="SellerProducts" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Add Product</span></a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Giá</th>
                        <th>Tồn kho</th>
                        <th>Trạng thái</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @if (@Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.ProductId
                                </td>
                                <td>
                                    @item.ProductName
                                </td>
                                <td>@item.Cat.CatName</td>
                                <td>@item.Price $</td>
                                
                                <td>@item.Quantity</td>
                                <td>
                                    @if (item.Quantity > 0)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Còn hàng</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Hết hàng</div>
                                        </div>
                                    }

                                </td>
                                <td>
                                    <a class="btn btn-primary m-r-5" asp-area="Seller" asp-controller="SellerProducts" asp-action="Details" asp-route-id="@item.ProductId">View</a>
                                    <a class="btn btn-secondary m-r-5 " asp-area="Seller" asp-controller="SellerProducts" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                                    <a class="btn btn-success m-r-5" asp-area="Seller" asp-controller="SellerProducts" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>

                                </td>
                            </tr>

                        }
                    }


                </tbody>
            </table>
            <div aria-label="Page navigation example">
               <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Seller" asp-controller="SellerProducts" asp-route-CatID="ViewBag.CurrentCateID" asp-action="Index" />
                </ul>
         </div>
        </div>
    </div>
</div>
<script>
    alert("123");
    document.addEventListener("DOMContentLoaded", function () {
        var select = document.querySelector(".custom-select");
        select.addEventListener("change", function(){
            alert("34");
            var selectID = this.value;
            alert(selectID);
            fetch(`/Seller/Filter/${selectID}`, {
                method: 'GET',
            }).then(respone=>{
                if (respone.ok) {
                    location.reload();

                }
                else {
                    alert("Fail");
                }
            })
        })
    });
 
</script>