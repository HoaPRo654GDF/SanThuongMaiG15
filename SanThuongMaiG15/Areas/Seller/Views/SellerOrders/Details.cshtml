@model SanThuongMaiG15.Models.Order

@{
    ViewData["Title"] = "Thông tin đơn hàng #" + Model.OrderId;
    Layout = "~/Areas/Seller/Views/Shared/_SellerLayout.cshtml";
    List<OrderDetail> orderDetails = ViewBag.ChiTiet;
}
    <div class="main-content">
        <div class="page-header">
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-area="Seller" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                    <a class="breadcrumb-item" asp-area="Seller" asp-controller="SellerOrders" asp-action="Index">Thông tin đơn hàng</a>
                    <span class="breadcrumb-item active">Chi tiết đơn hàng</span>
                </nav>
            </div>
        </div>
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <div id="invoice" class="p-h-30">
                        <div class="row m-t-20 lh-2">
                            <div class="col-sm-6">
                            <h3 class="p-l-10 m-t-10">Chi tiết đơn hàng:</h3>
                                <address class="p-l-10 m-t-10">
                                    <span class="font-weight-semibold text-dark">@Model.Buyer.Username</span><br>
                                    <span>@Model.Address </span><br>
                                    <span>@Model.Buyer.PhoneNumber</span>
                                </address>
                            </div>
                            <div class="col-sm-6">
                                <div class="m-t-80">
                                    <div class="text-dark text-uppercase d-inline-block">
                                        <span class="font-weight-semibold text-dark">Mã đơn hàng :</span>
                                    </div>
                                    <div class="float-right">@Model.BuyerId</div>
                                </div>
                                <div class="text-dark text-uppercase d-inline-block">
                                    <span class="font-weight-semibold text-dark">Ngày mua :</span>
                                </div>
                                <div class="float-right">@Model.OrderDate</div>
                                <br />
                            <div class="text-dark text-uppercase d-inline-block">
                                <span class="font-weight-semibold text-dark">Trạng thái đơn hàng :</span>
                            </div>
                            <div class="float-right">@Model.TransactStatus.Status</div>
                            </div>
                        </div>
                        <div class="m-t-20">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                       <tr>
                                            <th>No.</th>
                                            <th>Tên sản phẩm</th>
                                            <th>Số lượng</th>
                                            <th>Đơn giá</th>
                                            <th>Tổng tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if(orderDetails!=null && orderDetails.Count() > 0)
                                        {
                                            int i = 1;
                                            foreach (var item in orderDetails)
                                            {
                                                <tr>
                                                    <th>@i</th>
                                                    <td>@item.Product.ProductName</td>
                                                    <td>@item.Quantity</td>
                                                    <td>@item.Price $</td>
                                                    <td>@item.TotalMoney $</td>
                                                </tr>
                                                i++;

                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="row m-t-30 lh-1-8">
                                <div class="col-sm-12">
                                    <div class="float-right text-right">
                                        <h3><span class="font-weight-semibold text-dark">Tổng tiền :</span> @Model.TotalMoney $</h3>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


