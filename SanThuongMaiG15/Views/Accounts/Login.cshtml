@model SanThuongMaiG15.ModelViews.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/assets/css/style.css" />
<main class="main-content">
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="login-form">
                            <h4 class="login-title text-center">Đăng nhập</h4>
                            <div class="row">
                                <div class="col-12">
                                    <label asp-for="Email">Địa chỉ Email</label>
                                    <input asp-for="Email" class="form-control" type="email" value="" placeholder="Nhập địa chỉ email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Password">Mật khẩu</label>
                                    <input asp-for="Password" class="form-control" type="password" value="" placeholder="Nhập mật khẩu">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="col-12 text-center">
                                    <input type="hidden" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" />
                                    <button type="submit" class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Đăng nhập</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
