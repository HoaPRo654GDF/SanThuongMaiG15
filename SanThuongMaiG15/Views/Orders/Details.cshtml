@model SanThuongMaiG15.ModelViews.OrderDetailViewModel

<div class="order-details">
    <h3>Chi tiết đơn hàng #@Model.OrderId</h3>
    <p>Trạng thái: @Model.OrderStatus</p>
    <p>Người mua: @Model.BuyerName</p>

    <h4>Chi tiết sản phẩm:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.OrderDetails)
            {
                <tr>
                    <td>@(detail.Product != null ? detail.Product.ProductName : "N/A")</td>
                    <td>@(detail.Quantity.HasValue ? detail.Quantity.Value.ToString() : "N/A")</td>
                    <td>@detail.Price $</td>
                </tr>
            }
        </tbody>
    </table>
</div>
