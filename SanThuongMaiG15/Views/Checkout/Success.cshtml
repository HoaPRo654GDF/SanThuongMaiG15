@model SanThuongMaiG15.ModelViews.MuaHangSuccessVM
@{
    ViewData["Title"] = "Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: #4CAF50;">Đặt Hàng Thành Công</h2>

<div style="padding: 20px; border: 1px solid #4CAF50; border-radius: 5px; background-color: #f9f9f9; color: #333; max-width: 600px; margin: 20px auto;">
    <h3 style="color: #4CAF50;">Cảm ơn bạn, @Model.Username!</h3>
    <p>Đơn hàng của bạn đã được đặt thành công.</p>

    <h4 style="color: #4CAF50;">Thông tin người mua hàng:</h4>
    <ul style="list-style-type: none; padding: 0;">
        <li style="margin: 5px 0;"><strong>Mã đơn hàng:</strong> @Model.OrderId</li>
        <li style="margin: 5px 0;"><strong>Người đặt hàng:</strong> @Model.Username</li>
        <li style="margin: 5px 0;"><strong>Điện thoại:</strong> @Model.PhoneNumber</li>
        <li style="margin: 5px 0;"><strong>Địa chỉ giao hàng:</strong> @Model.Address</li>
        <li style="margin: 5px 0;"><strong>Ghi chú:</strong> @Model.Note</li>
    </ul>

    <p>Chúng tôi sẽ liên hệ với bạn qua số điện thoại trên để xác nhận đơn hàng.</p>
    <a href="/xem-don-hang.html" style="margin-top: 20px; display: inline-block; background-color: #4CAF50; color: white; padding: 10px 15px; text-decoration: none; border-radius: 5px;">Xem đơn hàng</a>
</div>
