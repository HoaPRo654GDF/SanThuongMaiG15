        // Hàm để cập nhật header giỏ hàng
        function loadHeaderCart() {
            fetch("/AjaxContent/HeaderCart", {
                method: "GET",
                cache: "no-cache"
            })
                .then(response => response.text())
                .then(html => {
                    document.getElementById("miniCart").innerHTML = html;
                });

            fetch("/AjaxContent/NumberCart", {
                method: "GET",
                cache: "no-cache"
            })
                .then(response => response.text())
